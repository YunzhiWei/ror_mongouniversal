<p id="notice"><%= notice %></p>

<h1>Listing Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Job title</th>
      <th>Job salary</th>
      <th>Job datetime</th>
      <th>Job location</th>
      <th>Source url</th>
      <th>Company name</th>
      <th>Company address</th>
      <th>Company industry</th>
      <th>Company property</th>
      <th>Company scale</th>
      <th>Company description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.job_title %></td>
        <td><%= job.job_salary %></td>
        <td><%= job.job_datetime %></td>
        <td><%= job.job_location %></td>
        <td><%= job.source_url %></td>
        <td><%= job.company_name %></td>
        <td><%= job.company_address %></td>
        <td><%= job.company_industry %></td>
        <td><%= job.company_property %></td>
        <td><%= job.company_scale %></td>
        <td><%= job.company_description %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

